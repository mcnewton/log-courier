#!/bin/sh
# prerm script for log-courier-gem

set -e

case "$1" in
    remove|upgrade|deconfigure)
	(
	cd /opt/logstash
	export GEM_HOME=vendor/bundle/jruby/1.9
	java -jar vendor/jar/jruby-complete-1.7.11.jar -S gem remove log-courier
	)
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0

